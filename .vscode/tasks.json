{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/applications"
            },
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "Build (qemu arm)",
            "type": "shell",
            "command": "west",
            "args": [
                "build",
                "-p",
                "auto",
                "--build-dir",
                "build/qemu_arm"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/applications",
                "env":{
                    "BOARD": "qemu_cortex_m3"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build (qemu x86)",
            "type": "shell",
            "command": "west",
            "args": [
                "build",
                "-p",
                "auto",
                "--build-dir",
                "build/qemu_x86",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}/applications",
                "env":{
                    "BOARD": "qemu_x86"
                },
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Build (nucleo_h723zg)",
            "type": "shell",
            "command": "west",
            "args": [
                "build",
                "-p",
                "auto",
                "--build-dir",
                "build/nucleo_h723zg"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/applications",
                "env":{
                    "BOARD": "nucleo_h723zg"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "west",
            "args": [
                "flash",
                "--build-dir",
                "build/nucleo_h723zg"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/applications",
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build & run (qemu arm)",
            "command": "west",
            "args": [
                "build",
                "-t",
                "run"
            ],
            "dependsOn": ["Build (qemu arm)"]
        },
        {
            "label": "Build & flash (nucleo_h723zg)",
            "dependsOn": ["Build (nucleo_h723zg)", "Flash"],
            "problemMatcher": []
        },
    ],
}


